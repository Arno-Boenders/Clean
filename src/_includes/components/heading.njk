{% macro header(title, description, link) %}
    <h1 class="header__title">{{title}}</h1>

    {% if button %}
        <a href="{{link}}">
            <button>{{button}}</button>
        </a>
    {% endif %}

    {% if description %}
        <p class="header__description">{{description}}</p>
    {% endif %}

    {% if link %}
        <a href="{{link}}" class="header__link">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="feather feather-arrow-left" viewBox="0 0 24 24"><path d="M19 12H5M12 19l-7-7 7-7"/></svg> Go Back</a>
    {% endif %}
{% endmacro %}